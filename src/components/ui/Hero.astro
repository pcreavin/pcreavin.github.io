---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'


const {fullName, title, institute, profilePicture} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Welcome! I'm <span class='text-secondary'>{fullName}</span>
  </h1>
  <p class='text-xl text-gray-600 mb-4'>{title}{institute ? `Masters student at ${institute}` : ''}</p>
  <p class='text-lg mb-6'>
    Iâ€™m an MS Statistics student at Stanford from Ireland with interests in applications of machine learning to quantitative finance/
  </p>
  <div class='flex gap-4'>
    <SocialIcons />
  </div>
</div>
<div class='size-72 lg:block hidden'>
  <!-- Add your profile image -->
<img
  class="mask mask-circle size-44"
  src={profilePicture}
  width="1557"
  height="1443"
  alt={`Profile picture of ${fullName}`}
/>
</div>
